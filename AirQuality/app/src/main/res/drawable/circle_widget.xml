<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"
    >
    <corners
        android:radius="20dp"
        />
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
    <size
        android:width="210dp"
        android:height="210dp" />
    <gradient
        android:angle="135"
        android:endColor="#8C512DA8"
        android:startColor="#8C4B89DA"
        android:type="linear" />
    <stroke
        android:width="10dp"
        android:color="#b3ffffff"
        android:dashWidth="0dp"
        android:dashGap="0dp" />
</shape>