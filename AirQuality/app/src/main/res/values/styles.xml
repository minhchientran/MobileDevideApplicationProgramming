<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBJ3</item>
        <item name="colorPrimaryDark">@color/colorBJ3</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!--Light Theme-->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorTransparencyPrimary</item>
        <item name="colorPrimaryDark">@color/colorTransparencyPrimary</item>
        <item name="colorAccent">@color/orange</item>
        <!--<item name="android:statusBarColor">@color/white</item>-->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@color/colorBJ3</item>
        <item name="android:windowBackground">@drawable/tile_background2</item>
    </style>


    <!-- Text styles -->
    <style name="SplashText">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceHeading">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAQIScale">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>

    <!--Animations-->

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_fade</item>
        <item name="android:windowExitAnimation">@anim/slide_down_fade</item>
    </style>
    <style name="AboutUsAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_left_to_right</item>
        <item name="android:windowExitAnimation">@anim/slide_right_to_left</item>
    </style>
</resources>
