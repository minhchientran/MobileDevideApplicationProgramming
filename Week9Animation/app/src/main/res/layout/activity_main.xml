<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/orange"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/orange"
        app:layout_constraintStart_toStartOf="@+id/light"
        app:layout_constraintTop_toTopOf="@+id/light"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/light"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:background="@drawable/light_blue"
        app:layout_constraintStart_toEndOf="@+id/normal"
        app:layout_constraintTop_toTopOf="@+id/normal"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/purple"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/purple"
        app:layout_constraintStart_toStartOf="@+id/dart"
        app:layout_constraintTop_toTopOf="@+id/dart"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/dart"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/dart_blue"
        app:layout_constraintStart_toStartOf="@+id/normal"
        app:layout_constraintTop_toTopOf="@+id/normal"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/normal"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="288dp"
        android:background="@drawable/normal_blue"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/red"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/red"
        app:layout_constraintStart_toStartOf="@+id/orange"
        app:layout_constraintTop_toTopOf="@+id/orange"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>