<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_backdrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/actor"
        android:paddingLeft="10dp"
        android:paddingRight="35dp"
        android:singleLine="true"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/list_backdrop"
        tools:layout_editor_absoluteX="0dp" />
    <View
        android:layout_marginTop="20dp"
        android:translationZ="50dp"
        android:id="@+id/bar_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a0a0a0"
        app:layout_constraintTop_toBottomOf="@+id/list_title" />
    <TextView
        android:id="@+id/list_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#33000000"
        android:fontFamily="@font/actor"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/list_title"
        app:layout_constraintEnd_toEndOf="@+id/list_title" />

</androidx.constraintlayout.widget.ConstraintLayout>